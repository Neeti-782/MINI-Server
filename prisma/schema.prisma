generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  YESNO
  TEXT
  RATING
}

model QuizAnswer {
  id      String   @id @default(uuid())
  score   Int
  answer  Json
  creatAt DateTime @default(now())
}

model Questions {
  id       Int          @id @default(autoincrement())
  ques     String
  type     QuestionType
  createAt DateTime     @default(now())
}
